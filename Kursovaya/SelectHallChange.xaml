<Page x:Class="Kursovaya.SelectHallChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovaya"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="1200"
      Background="white"
      Title="SelectHallChange">

    <StackPanel Width="900">
        <TextBlock FontSize="24" Text="Выбор зала для редактирования:" Margin="0,50,0,20"></TextBlock>
        <StackPanel x:Name="hallsButtons" Orientation="Horizontal">
        </StackPanel>
        <Button Tag="0" Margin="0,50" HorizontalAlignment="Left" Content="Создать" Background="MediumSeaGreen" Foreground="White" Width="180" Height="30" BorderBrush="Transparent" Click="createHallButton"></Button>
    </StackPanel>
</Page>
